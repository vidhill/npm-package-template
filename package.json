{
    "name": "npm-package-template",
    "version": "1.0.0",
    "description": "Template repo for npm packages",
    "main": "build/index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "prebuild": "rimraf build/",
        "build": "babel src -d build",
        "dev": "watch 'npm run build' src",
        "lint": "npm-run-all --parallel lint:*",
        "lint-fix": "npm-run-all --parallel fix:*",
        "lint:js": "eslint 'src/**/*.js'",
        "fix:js": "npm run lint:js -- --fix",
        "lint-md": "prettier  \"**/*.md\"",
        "fix:md": "npm run lint-md -- --write",
        "lint:md": "npm run lint-md -- --check",
        "pre-push": "npm run lint",
        "prepublish": "npm run pre-push; npm run build",
        "release": "np"
    },
    "author": "",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/vidhill/npm-package-template.git"
    },
    "devDependencies": {
        "@babel/cli": "^7.14.3",
        "@babel/core": "^7.14.3",
        "babel-preset-latest-node": "^5.5.1",
        "eslint": "^7.28.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-jest": "^24.3.6",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^6.0.0",
        "jest": "^27.0.4",
        "np": "^7.5.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.3.1",
        "watch": "^1.0.2"
    }
}
